{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "@types/jest"]
  },
  "include": [
    "src/**/*.test.ts", 
    "src/**/*.test.tsx", 
    "src/setupTests.ts",
    "src/jest.d.ts"
  ]
}
